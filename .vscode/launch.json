{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Next.js: Server-side",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "/bin/bash",
        "runtimeArgs": [
          "-c",
          "source /home/marcelomacedo/.nvm/nvm.sh && nvm use 20 && npm run dev"
        ],
        "port": 9229,
        "skipFiles": [
          "<node_internals>/**"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "name": "Next.js: Client-side",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}",
        "breakOnLoad": true
      }
    ]
  }
  